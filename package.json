{
  "name": "manager",
  "version": "0.0.0",
  "private": true,
  "description": "OVH Control Panel also known as Manager",
  "license": "BSD-3-Clause",
  "workspaces": [
    "packages/manager/apps/*",
    "packages/manager/modules/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "clean": "yarn run clean:dist && npx rimraf **/node_modules",
    "clean:dist": "npx rimraf dist packages/**/dist",
    "links": "ls -l node_modules/ | grep ^l || echo 'no linked packages'",
    "lint": "run-p lint:css lint:html lint:js lint:md",
    "lint:css": "stylelint 'packages/**/*.less' --fix",
    "lint:html": "htmlhint 'packages/**/*.html'",
    "lint:js": "eslint --fix .",
    "lint:md": "remark -qf .",
    "packages:publish": "node ./scripts/publish",
    "test": "yarn lint && yarn run test:e2e",
    "test:e2e": "lerna run test:e2e --stream --concurrency=1",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "node ./scripts/release"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-angular": "^7.1.1",
    "@ovh-ux/codename-generator": "^1.0.0",
    "babel-eslint": "^8.2.6",
    "commander": "^2.19.0",
    "concat-stream": "^2.0.0",
    "conventional-changelog-cli": "^2.0.11",
    "conventional-commits-parser": "^3.0.1",
    "conventional-recommended-bump": "^4.0.4",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-lerna": "jleveugle/eslint-import-resolver-lerna",
    "execa": "^1.0.0",
    "find-free-port": "^2.0.0",
    "git-raw-commits": "^2.0.0",
    "htmlhint": "^0.10.0",
    "husky": "^1.0.0",
    "kill-port": "^1.3.2",
    "lerna": "^3.4.3",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.5",
    "octonode": "^0.9.5",
    "ora": "^3.0.0",
    "remark-cli": "^5.0.0",
    "remark-lint": "^6.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "semver": "^5.6.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "tcp-port-used": "^1.0.1"
  },
  "engines": {
    "node": ">=8.11"
  }
}
