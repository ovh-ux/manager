{
  "name": "manager",
  "version": "0.0.0",
  "private": true,
  "description": "OVH Control Panel also known as Manager",
  "license": "BSD-3-Clause",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "webpack --config ./packages/manager-layout-ovh/webpack.config.js --env=production",
    "links": "ls -l node_modules/ | grep ^l || echo 'no linked packages'",
    "lint": "run-p lint:css lint:html lint:js lint:md",
    "lint:css": "stylelint 'packages/**/*.less' --fix",
    "lint:html": "htmlhint 'packages/**/*.html'",
    "lint:js": "eslint --fix .",
    "lint:md": "remark -qf .",
    "start": "webpack-dev-server --config ./packages/manager-layout-ovh/webpack.config.js",
    "test": "yarn lint",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "node ./scripts/release"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-angular": "^7.1.1",
    "commander": "^2.19.0",
    "conventional-changelog-cli": "^2.0.11",
    "conventional-recommended-bump": "^4.0.4",
    "execa": "^1.0.0",
    "htmlhint": "^0.10.0",
    "husky": "^1.0.0",
    "lerna": "^3.4.3",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "octonode": "^0.9.5",
    "ora": "^3.0.0",
    "remark-cli": "^5.0.0",
    "remark-lint": "^6.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "semver": "^5.6.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "engines": {
    "node": ">=8.11"
  }
}
